<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <property dbms="mysql,mariadb" name="db.type" value="mysql"/>
    <property dbms="mssql" name="db.type" value="mssql"/>
    <property dbms="oracle" name="db.type" value="oracle"/>

    <changeSet id="2021.07_001" context="initial_2021_07" author="backbase">
        <comment>Initial database schema</comment>
        <sqlFile dbms="mssql,oracle,mysql,mariadb"
            encoding="UTF-8"
            path="../support-files/${db.type}/2021_07_01_create_tables.sql"
            relativeToChangelogFile="true"
            stripComments="true"/>
    </changeSet>

    <changeSet id="2021.07_002" context="initial_2021_07" author="backbase">
        <comment>Initial data setup</comment>
        <sqlFile dbms="mssql,oracle,mysql,mariadb"
            encoding="UTF-8"
            path="../support-files/${db.type}/2021_07_02_populate_tables.sql"
            relativeToChangelogFile="true"
            stripComments="true"/>
    </changeSet>

    <changeSet id="2021.07_003" context="initial_2021_07" author="backbase" >
        <tagDatabase tag="2021.07"/>
    </changeSet>

</databaseChangeLog>