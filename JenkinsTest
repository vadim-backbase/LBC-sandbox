pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: maven
            image: maven:alpine
            command:
            - cat
            tty: true
        '''
    }
  }
  environment {
    DATE = new Date().format('yy.M')
    TAG = "${DATE}.${BUILD_NUMBER}"
  }

  stages {
    stage('mvn Build legalentity') {
      steps {
        container('maven') {
          checkout scm
          sh '''
            cd legalentity-integration-external-mock-1.51.2.1
            mvn clean package
            mvn package -Pdocker-image || True

          '''
        }
      }
    }
  }
}
